{
	"description": "Orchestra Platform Website",
	"license": "proprietary",
	"require": {
		"orchestra/foundation": "2.3.*",
		"orchestra/control": "2.3.*",
		"orchestra/story": "2.3.*",
		"daylerees/kurenai": "~1.0",
		"pda/pheanstalk": "~3.0",
		"bugsnag/bugsnag-laravel": "~1.0"
	},
	"require-dev": {
		"mockery/mockery": "0.9.*",
		"codeception/codeception": "~2.0"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app/",
			"Platform\\": "src/"
		},
		"classmap": [
			"database/migrations",
			"database/seeds",
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan publish:assets orchestra/foundation",
			"php artisan orchestra:optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan publish:assets orchestra/foundation",
			"php artisan orchestra:optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"prefer-stable": true,
	"minimum-stability": "dev"
}
