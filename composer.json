{
	"description": "Orchestra Platform Website",
	"license": "proprietary",
	"type": "project",
	"require": {
		"orchestra/foundation": "3.0.*",
		"orchestra/installer": "3.0.*",
		"orchestra/control": "3.0.*",
		"orchestra/story": "3.0.*",
		"daylerees/kurenai": "~1.1",
		"pda/pheanstalk": "~3.0"
	},
	"require-dev": {
		"mockery/mockery": "0.9.*",
		"codeception/codeception": "~2.0",
		"orchestra/testbench": "3.0.*"
	},
	"autoload": {
		"classmap": [
			"resources/database",
			"tests/TestCase.php"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan publish:assets orchestra/foundation",
			"php artisan orchestra:optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan publish:assets orchestra/foundation",
			"php artisan orchestra:optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"prefer-stable": true,
	"minimum-stability": "dev"
}
