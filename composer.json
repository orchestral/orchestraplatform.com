{
	"description": "Orchestra Platform Website",
	"license": "proprietary",
	"require": {
		"orchestra/foundation": "2.2.*",
		"orchestra/control": "2.2.*",
		"orchestra/story": "2.2.*",
		"daylerees/kurenai": "~1.0",
		"pda/pheanstalk": "~2.1",
		"bugsnag/bugsnag-laravel": "~1.0"
	},
	"require-dev": {
		"mockery/mockery": "0.9.*",
		"codeception/codeception": "~2.0"
	},
	"autoload": {
		"psr-4": {
			"Platform\\": "src/"
		},
		"classmap": [
			"app/database/migrations",
			"app/database/seeds",
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan orchestra:optimize",
			"php artisan asset:publish orchestra/foundation"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan orchestra:optimize",
			"php artisan asset:publish orchestra/foundation"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "beta"
}
